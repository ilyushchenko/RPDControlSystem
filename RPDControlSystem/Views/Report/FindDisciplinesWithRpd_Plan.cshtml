@model IEnumerable<RPDControlSystem.Models.RPD.DisciplineInfo>
@{
    string lastPlan = "";
}
<div class="panel">
    <div class="panel-heading">
        <h3 class="text-uppercase">Группировка по плану</h3>
    </div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DisciplineType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Discipline.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Plan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TeacherProfile)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkPlanId)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (lastPlan != item.PlanCode)
                    {
                        lastPlan = item.PlanCode;
                        <tr class="accent"><td colspan="6"><h4>Код плана: @lastPlan</h4></td></tr>
                    }
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisciplineType)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Discipline.Name)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Plan.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeacherProfile.FullName)
                        </td>
                        <td>
                            <a href="@item.WorkPlan.FullPath" target="_blank">@Html.DisplayFor(modelItem => item.WorkPlan.BaseName)</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
