@model IEnumerable<RPDControlSystem.Models.RPD.DisciplineInfo>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisciplineType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisciplineCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlanCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherProfileId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkPlanId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="DisciplineInfoes" asp-route-id="@item.DisciplineCode">@Html.DisplayFor(modelItem => item.FullCode)</a>
                </td>
                <td>
                    @if (item.DisciplineType == DisciplineType.Additional)
                    {
                        <span>По-выбору</span>
                    }
                    @if (item.DisciplineType == DisciplineType.Base)
                    {
                        <span>Базовая</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisciplineCode)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Plans" asp-route-id="@item.PlanCode">@Html.DisplayFor(modelItem => item.PlanCode)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherProfileId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkPlan.BaseName)
                </td>
            </tr>
        }
        <tr class="main"><td colspan="5" class="text-right">Итого:</td><td>@Model.Count()</td></tr>
    </tbody>
</table>
