@model RPDControlSystem.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<div class="row">
    <div class="col-md-12">
        <div class="white-bg panel content-header">
            <h2>Профиль пользователя</h2>
            <h4>Изменение пароля</h4>
        </div>
    </div>
    <div class=" col-md-6">
        <div class="panel">
            <div class="panel-heading">
                <h2 class="text-uppercase">Смена пароля</h2>
            </div>
            <div class="panel-body">
                <form method="POST" asp-action="ChangePassword">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="OldPassword" class="control-label">@Html.DisplayNameFor(model => model.OldPassword)</label>
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label">@Html.DisplayNameFor(model => model.NewPassword)</label>
                        <input asp-for="NewPassword" class="form-control" />
                        <p><span asp-validation-for="NewPassword" class="text-danger"></span></p>
                        <label asp-for="ConfirmPassword" class="control-label">@Html.DisplayNameFor(model => model.ConfirmPassword)</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Изменить" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            <a asp-action="Index">В профиль</a>
        </div>
    </div>
</div>