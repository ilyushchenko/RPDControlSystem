@model IEnumerable<RPDControlSystem.Models.RPD.Competence>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direction.Code)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Competences" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="Competences" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="Competences"  asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
