@model IEnumerable<RPDControlSystem.Models.RPD.Profile>

@{
    ViewData["Title"] = "Index";
}

<h2>Направления подготовки</h2>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direction)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Code">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Directions" asp-route-id="@item.DirectionCode">@Html.DisplayFor(modelItem => item.Direction.Code)</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Code">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@item.Code">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
