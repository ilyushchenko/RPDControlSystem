@model RPDControlSystem.Models.RPD.Plan

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Plan</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EducationForm)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EducationForm)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Profile)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Profile.Code)
        </dd>
    </dl>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <h4>Дисциплины по плану</h4>
        @if (Model.Disciplines != null && Model.Disciplines.Count > 0)
        {
            Html.RenderPartial("_ShowDisciplineInfo", Model.Disciplines);
        }
        else
        {
            <p>Дисциплин нет</p>
        }
    </div>
    <div class="col-md-6">
        <h4>Добавить дисциплину</h4>
        @{Html.RenderPartial("_AddDisciplineInfo", new DisciplineInfo() { PlanCode = Model.Code });}
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Code">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
