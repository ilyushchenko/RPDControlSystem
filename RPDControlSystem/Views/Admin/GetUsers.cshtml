@model IEnumerable<RPDControlSystem.Models.RPD.TeacherProfile>

@{
    ViewData["Title"] = "Пользователи - Администрирование";
}

<h2>Пользователи</h2>

<p>
    <a asp-action="CreateUser">Добавить пользователя</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DegreeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostId)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="DetailsUser" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.FullName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Post.Name)
                </td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="DeleteUser" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
